<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd ">
    <changeSet id="create_home_tasks_br2_v1.0" author="Olga Tysevich">
        <createTable tableName="home_tasks_b2">
            <column name="task_id" type="integer" autoIncrement="false">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="start_date" type="date"/>
            <column name="end_date" type="date"/>
            <column name="home_task_city" type="varchar(255)"/>
            <column name="home_task_street" type="varchar(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
